@{
}
@model StudentPortal.Models.BookModel


@if (Model == null)
    {
        <p>No book details available.</p>
    }
    else
    

    {

    <h3> Book Details</h3>
    <div class="container">
        
        <div class="row">
            <div class="col-md-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/book/img 1.jpeg" alt="First slide" height="400" width="600">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/book/img 2.jpeg" alt="Second slide" height="400" width="600">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/book/img-3.jpeg" alt="Third slide" height="400" width="600">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Title</h5>
                        <p class="card-text"><strong>Author:</strong> @Model.Author</p>
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">@Model.LanguageId</p>
                        <p class="card-text"><small class="text-muted">Published: Year</small></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
        }
<hr />
