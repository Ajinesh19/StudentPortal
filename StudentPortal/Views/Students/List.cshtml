@{
}
@model List<StudentPortal.Models.Entities.Student>
<h1>Students</h1>
<div>
    <table class="table ">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>  </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td> 
                        <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id" >edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>